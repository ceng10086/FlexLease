{
  "info": {
    "_postman_id": "f7f9e4f9-6c0d-4b87-92fd-5cfa17225ce4",
    "name": "FlexLease Cart & Order Flow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection covering cart CRUD and cart-driven order checkout for FlexLease.\n\nUsage:\n- Start the full stack via docker compose (recommended), then set `baseUrl` to `http://localhost:8080`.\n- Set `accessToken` to a valid JWT from `POST /api/v1/auth/token`.\n- For admin/internal calls that require `userId`, fill the corresponding variables."
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "List Cart Items",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/cart?userId={{userId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "cart"
          ],
          "query": [
            {
              "key": "userId",
              "value": "{{userId}}"
            }
          ]
        }
      }
    },
    {
      "name": "Add Item To Cart",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "name": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"vendorId\": \"{{vendorId}}\",\n  \"productId\": \"{{productId}}\",\n  \"skuId\": \"{{skuId}}\",\n  \"planId\": \"{{planId}}\",\n  \"productName\": \"共享咖啡机\",\n  \"skuCode\": \"COFFEE-01\",\n  \"planSnapshot\": \"{\\\"termMonths\\\":12}\",\n  \"quantity\": 1,\n  \"unitRentAmount\": 99.00,\n  \"unitDepositAmount\": 200.00,\n  \"buyoutPrice\": null\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/cart/items",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "cart",
            "items"
          ]
        }
      }
    },
    {
      "name": "Update Cart Item Quantity",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "name": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"quantity\": 2\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/cart/items/{{cartItemId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "cart",
            "items",
            "{{cartItemId}}"
          ]
        }
      }
    },
    {
      "name": "Remove Cart Item",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/cart/items/{{cartItemId}}?userId={{userId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "cart",
            "items",
            "{{cartItemId}}"
          ],
          "query": [
            {
              "key": "userId",
              "value": "{{userId}}"
            }
          ]
        }
      }
    },
    {
      "name": "Checkout Order From Cart",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "name": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\",\n  \"vendorId\": \"{{vendorId}}\",\n  \"planType\": \"STANDARD\",\n  \"cartItemIds\": [\"{{cartItemId}}\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/orders",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "v1",
            "orders"
          ]
        }
      }
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": []
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": []
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "userId",
      "value": ""
    },
    {
      "key": "vendorId",
      "value": ""
    },
    {
      "key": "productId",
      "value": ""
    },
    {
      "key": "skuId",
      "value": ""
    },
    {
      "key": "planId",
      "value": ""
    },
    {
      "key": "cartItemId",
      "value": ""
    }
  ]
}
